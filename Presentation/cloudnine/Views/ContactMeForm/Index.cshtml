@using EPiServer.Core
@using EPiServer.Web.Mvc.Html

@model cloudnine.Models.Blocks.ContactMeForm
<div class="col-lg-12">
    <div class="block">
        <div id="formDiv">
            @Html.PropertyFor(m => m.Name)
            @Html.PropertyFor(t => t.MainBody)
            @using (Ajax.BeginForm(controllerName: "PostForm",
            actionName: "ManageForm", ajaxOptions: new AjaxOptions
            {
                UpdateTargetId = "message",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",
            }))
            {
                <input type="text" name="sureName" placeholder="Förnamn" /><br />
                <input type="text" name="lastName" placeholder="Efternamn" /><br />
                <input type="text" name="email" placeholder="E-post" required="" /><br />
                <input type="text" name="phoneNumber" placeholder="Telefonnummer" /><br /><br />
                <input id="formSubmit" type="submit" value="SKICKA" /><br />
            }
            <div id="message"></div>

            <script src="~/Scripts/jquery-1.9.1.min.js"></script>
            <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
        </div>
    </div>
</div>
