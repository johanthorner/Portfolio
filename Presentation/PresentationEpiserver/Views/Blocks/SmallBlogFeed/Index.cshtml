@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using PresentationEpiserver.Helpers

@model PresentationEpiserver.Models.Blocks.SmallBlogFeed

<div>
    <h2>@Html.PropertyFor(m => m.Header)</h2>
    <div id="latestNews" class="col-lg-12"></div>
</div>
<script type="text/javascript">

    var uri = '/api/bloggs/en/4';

    $(document).ready(function () {
        $.getJSON(uri)
              .done(function (data) {
                  $.each(data, function (key, item) {
                      $('#latestNews')
                          .append($('<div class="col-lg-3">')
                          .append($('<img src="' + item.ImageUrl + '" class="col-lg-12" height ="216">'))
                          .append("<h4>" + item.Header + "</h4>")
                          .append("<p>" + item.Ingress + "</p></div>"));
                  });
              });
    });

</script>