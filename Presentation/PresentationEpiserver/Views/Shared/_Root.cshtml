@using EPiServer
@using EPiServer.Core
@using EPiServer.ServiceLocation
@using PresentationEpiserver.Helpers
@using EPiServer.Web.Mvc.Html

@{
    var contentLoader = ServiceLocator.Current.GetInstance<IContentLoader>();
    var startPage = contentLoader.Get<PresentationEpiserver.Models.Pages.StartPage>(ContentReference.StartPage);
}

<!DOCTYPE html>
<html>
<head>
    <title>Cloudnine</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/customStyle.css" rel="stylesheet" />
    @*<link href="~/Content/jasny-bootstrap.min.css" rel="stylesheet" />*@

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
        <nav class="navbar navbar-light bg-faded">
            <div class="navbar-header">
                <a href="@startPage.LinkURL"><img src="~/Content/Images/Logos/logotyp_cloudnine.png" class="logo" width="100px" height="20px" /></a>
            </div>
            <ul class="nav navbar-nav">
                @foreach (var item in Html.GetSubMenuItems())
                {
                    <li class="nav-item">
                        @Html.ContentLink(item.ContentLink)
                    </li>
                }
            </ul>
        </nav>
        <button type="button" class="navbar-toggle" data-toggle="oncanvas" data-target=".navmenu" data-canvas="body">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    @*centerContent col-md-8 col-lg-offset-2*@
<div class="centerContent col-md-12">
    @RenderBody()
</div>
  @*@Html.Partial("_Footer")*@  
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/mainMenu.js"></script>
</body>
</html>
